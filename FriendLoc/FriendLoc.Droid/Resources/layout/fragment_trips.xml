<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_marginTop="@dimen/screen_padding"
	android:layout_marginBottom="@dimen/screen_padding"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:id="@+id/topArea"
		android:paddingHorizontal="@dimen/screen_padding"
		android:layout_width="match_parent"
		android:layout_height="@dimen/field_height">

		<FriendLoc.Controls.CustomEditText
			android:id="@+id/addressTxt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/scanQRBtn"
			android:hint="Trip name"
			android:layout_marginRight="@dimen/fields_margin"
			app:endIconMode="clear_text"
			app:startIconDrawable="@drawable/ic_search_24"
			app:helperTextEnabled="true"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:imeOptions="actionSearch"
				android:inputType="text"/>

		</FriendLoc.Controls.CustomEditText>

		<com.google.android.material.button.MaterialButton
				android:id="@+id/scanQRBtn"
				android:layout_width="@dimen/normal_bnt_size"
				android:layout_height="@dimen/normal_bnt_size"
				style="@style/Widget.MaterialComponents.Button.Icon"
				app:icon="@drawable/ic_qr_code_scanner_24"
				app:iconSize="@dimen/_20ssp"
				app:iconGravity="textStart"
				android:layout_alignParentRight="true"
				android:padding="0dp"
				android:layout_centerVertical="true"
				app:iconPadding="0dp"
				android:insetLeft="0dp"
				android:insetTop="0dp"
				android:insetRight="0dp"
				android:insetBottom="0dp"
				app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"/>
	</RelativeLayout>
	<ListView
		android:layout_below="@+id/topArea"
		android:layout_marginTop="@dimen/fields_margin"
		android:layout_marginBottom="@dimen/fields_margin"
		android:layout_above="@+id/addTripBtn"
		android:id="@+id/tripListview"
		android:drawSelectorOnTop="true"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:dividerHeight="0dp"/>

	<com.google.android.material.button.MaterialButton
		android:layout_marginLeft="@dimen/screen_padding"
		android:layout_marginRight="@dimen/screen_padding"
		android:layout_alignParentBottom="true"
		android:id="@+id/addTripBtn"
		android:layout_width="match_parent"
		android:layout_height="@dimen/btn_height"
		android:text="Add Trip"
		style="@style/Widget.MaterialComponents.Button.Icon"/>
</RelativeLayout>
