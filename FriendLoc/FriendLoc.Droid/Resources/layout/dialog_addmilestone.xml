<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/screen_padding">
	<RelativeLayout
		android:id="@+id/avtArea"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimaryDark"
		android:paddingTop="@dimen/avt_top_margin"
		android:paddingBottom="@dimen/avt_top_margin">
		<RelativeLayout
			android:layout_width="@dimen/avtt_img_size"
			android:layout_centerHorizontal="true"
			android:layout_height="@dimen/avtt_img_size">
			<com.google.android.material.imageview.ShapeableImageView
				android:id="@+id/avtImg"
				android:layout_width="@dimen/avtt_img_size"
				android:layout_height="@dimen/avtt_img_size"
				app:strokeColor="@android:color/darker_gray"
				android:padding="@dimen/big_stroke_size"
				android:scaleType="fitXY"
				android:src="@drawable/ic_add_location_24"
				app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlayStyle"
				app:strokeWidth="0dp"/>
		</RelativeLayout>
	</RelativeLayout>

	<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
		android:id="@+id/updatImgBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:iconTint="@color/colorScreenBackground"
		app:backgroundTint="@color/colorPrimary"
		android:layout_alignParentRight="true"
		android:layout_marginTop="@dimen/avt_add_top_margin"
		android:layout_marginRight="@dimen/screen_padding"
		app:icon="@drawable/ic_plus_24p"/>

	<FriendLoc.Controls.CustomEditText
		android:layout_marginLeft="@dimen/screen_padding"
		android:layout_marginRight="@dimen/screen_padding"
		android:layout_marginTop="@dimen/fields_margin"
		android:layout_below="@+id/updatImgBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Name of Milestone"
		android:id="@+id/nameTxt"
		app:endIconMode="clear_text"
		app:startIconDrawable="@drawable/ic_pencil_24"
		app:startIconContentDescription="The login name"
		app:helperTextEnabled="true"
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"		 />

	</FriendLoc.Controls.CustomEditText>

	<RelativeLayout
		android:layout_marginLeft="@dimen/screen_padding"
		android:layout_marginRight="@dimen/screen_padding"
		android:layout_marginTop="@dimen/fields_margin"
		android:id="@+id/addressArea"
		android:layout_below="@+id/nameTxt"
		android:gravity="left|center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<FriendLoc.Controls.CustomEditText
			android:layout_toLeftOf="@+id/selectPositionBtn"
			android:id="@id/addressTxt"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_100_5sdp"
			android:hint="Adddress"
			android:layout_marginRight="@dimen/fields_margin"
			android:layout_gravity="top"
			app:endIconMode="clear_text"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:singleLine="false"
				android:gravity="top"
				android:maxLines="10"
				android:inputType="textMultiLine"
				android:layout_height="match_parent" />

		</FriendLoc.Controls.CustomEditText>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/selectPositionBtn"
			android:layout_width="@dimen/small_bnt_size"
			android:layout_height="@dimen/small_bnt_size"
			style="@style/Widget.MaterialComponents.Button.Icon"
			app:icon="@drawable/ic_travel_explore_24"
			app:iconSize="@dimen/_20ssp"
			app:iconGravity="textStart"
			android:layout_alignParentRight="true"
			android:padding="0dp"
			app:iconPadding="0dp"
			android:insetLeft="0dp"
			android:insetTop="0dp"
			android:insetRight="0dp"
			android:insetBottom="0dp"
			app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"/>

	</RelativeLayout>

	<com.google.android.material.button.MaterialButton
		android:layout_marginLeft="@dimen/screen_padding"
		android:layout_marginRight="@dimen/screen_padding"
		android:layout_marginTop="@dimen/fields_margin"
		android:layout_below="@+id/addressArea"
		android:id="@+id/submitBtn"
		android:layout_width="match_parent"
		android:layout_height="@dimen/btn_height"
		android:text="Submit"
		style="@style/Widget.MaterialComponents.Button.Icon"/>

</RelativeLayout>
