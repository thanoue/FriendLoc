<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:paddingTop="@dimen/screen_padding"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:paddingLeft="@dimen/screen_padding"
		android:paddingRight="@dimen/screen_padding"
		android:id="@+id/topField"
		android:gravity="left|center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<FriendLoc.Controls.CustomEditText
			android:id="@+id/addressTxt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/submitBtn"
			android:hint="Location Name"
			app:endIconMode="clear_text"
			android:layout_marginRight="@dimen/fields_margin"
			app:startIconDrawable="@drawable/ic_search_24"
			app:helperTextEnabled="true"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:imeOptions="actionSearch"
				android:inputType="text"/>

		</FriendLoc.Controls.CustomEditText>

		<com.google.android.material.button.MaterialButton
			android:id="@id/submitBtn"
			android:layout_width="@dimen/small_bnt_size"
			android:layout_height="@dimen/small_bnt_size"
			style="@style/Widget.MaterialComponents.Button.Icon"
			app:icon="@drawable/ic_check_24"
			app:iconSize="@dimen/_20ssp"
			app:iconGravity="textStart"
			android:layout_alignParentRight="true"
			android:padding="0dp"
			android:layout_centerVertical="true"
			app:iconPadding="0dp"
			android:insetLeft="0dp"
			android:insetTop="0dp"
			android:insetRight="0dp"
			android:insetBottom="0dp"
			app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"/>

	</RelativeLayout>
	<com.asksira.webviewsuite.WebViewSuite
		android:layout_marginTop="@dimen/fields_margin"
		android:layout_below="@+id/topField"
		android:id="@+id/mainWebview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:webViewProgressBarStyle="linear"
		app:inflationDelay="100"
		android:windowSoftInputMode="adjustResize"
		app:enableJavaScript="true"
		app:overrideTelLink="true"
		app:overrideEmailLink="true"
		app:overridePdfLink="true"
		app:showZoomControl="false"
		app:enableVerticalScrollBar="false"
		app:enableHorizontalScrollBar="false"/>
</RelativeLayout>
