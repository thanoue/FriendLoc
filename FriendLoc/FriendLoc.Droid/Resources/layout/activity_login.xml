<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="@dimen/screen_padding"
		android:gravity="center">

		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/userNameTxt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Login Name"
			app:counterEnabled="true"
			app:counterMaxLength="20"
			app:endIconMode="clear_text"
			app:startIconDrawable="@drawable/ic_face_24"
			app:startIconContentDescription="The login name"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

		</com.google.android.material.textfield.TextInputLayout>

		<com.google.android.material.textfield.TextInputLayout
			android:layout_marginTop="@dimen/fields_margin"
			android:id="@+id/passwordTxt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Password"
			app:endIconMode="password_toggle"
			app:errorEnabled="true"
			app:counterEnabled="true"
			app:counterMaxLength="15"
			app:startIconDrawable="@android:drawable/ic_secure"
			app:startIconContentDescription="The login name"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:inputType="textPassword"
				android:layout_height="wrap_content" />

		</com.google.android.material.textfield.TextInputLayout>

		<CheckBox
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:checked="false"
			app:useMaterialThemeColors="true"
			android:text="Keep me logged in"/>
		<Button
			android:id="@+id/loginBtn"
			android:layout_width="match_parent"
			android:layout_height="@dimen/btn_height"
			android:text="Login"
			app:rippleColor="#fff"
			style="@style/Widget.MaterialComponents.Button.Icon"/>
		<Button
			android:id="@+id/forgotPasswordBtn"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/text_btn_height"
			android:layout_gravity="right|center"
			android:text="Forgot Password?"
			style="@style/Widget.MaterialComponents.Button.TextButton"/>


	</LinearLayout>
	<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
		android:id="@+id/extended_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:layout_gravity="bottom|right"
		android:contentDescription="Signup"
		app:iconTint="@color/colorScreenBackground"
		android:textColor="@color/colorScreenBackground"
		app:backgroundTint="@color/colorPrimary"
		android:text="Sign Up"
		app:icon="@drawable/ic_plus_24p"/>
</android.support.design.widget.CoordinatorLayout>
