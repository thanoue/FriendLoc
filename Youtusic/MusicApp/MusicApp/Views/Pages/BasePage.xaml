<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="MusicApp.Pages.BasePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:MusicApp.Controls"
    xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material.Forms"
    xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:static="clr-namespace:MusicApp.Static"
    x:Name="basePage"
    material:MaterialNavigationPage.AppBarColor="{StaticResource HeaderBarColor}"
    material:MaterialNavigationPage.AppBarTitleTextAlignment="Center"
    material:MaterialNavigationPage.AppBarTitleTextColor="White"
    material:MaterialNavigationPage.AppBarTitleTextFontFamily="BoldFont"
    material:MaterialNavigationPage.AppBarTitleTextFontSize="{StaticResource HeaderBarTitleFontSize}"
    material:MaterialNavigationPage.StatusBarColor="{StaticResource StatusBarColor}">
    <ContentPage.Content>
        <pv:PancakeView
            Padding="0"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <pv:PancakeView.BackgroundGradientStops>
                <pv:GradientStopCollection>
                    <pv:GradientStop Offset="1" Color="#E3E7EE" />
                    <pv:GradientStop Offset="0" Color="#FBFBFB" />
                    <pv:GradientStop Offset="2" Color="#E3E7EE" />
                </pv:GradientStopCollection>
            </pv:PancakeView.BackgroundGradientStops>

            <Grid
                Margin="0"
                Padding="0"
                RowDefinitions="*,auto"
                RowSpacing="0">
                <ContentView
                    Margin="0"
                    Padding="0"
                    Content="{Binding Source={x:Reference basePage}, Path=ViewContent}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand" />

                <!--  player  -->
                <Grid
                    Grid.Row="1"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding IsShowPlayer}"
                    VerticalOptions="End">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenPlayerCommand}" />
                    </Grid.GestureRecognizers>
                    <Grid
                        BindingContext="{x:Static static:MediaController.Instance}"
                        HeightRequest="{StaticResource PlayerHeight}"
                        HorizontalOptions="FillAndExpand"
                        IsVisible="{Binding IsHasPlayer}"
                        VerticalOptions="End">

                        <pv:PancakeView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <pv:PancakeView.BackgroundGradientStops>
                                <pv:GradientStopCollection>
                                    <pv:GradientStop Offset="0" Color="#E3E7EE" />
                                    <pv:GradientStop Offset="1" Color="#FBFBFB" />
                                </pv:GradientStopCollection>
                            </pv:PancakeView.BackgroundGradientStops>
                            <Grid
                                Margin="0"
                                Padding="0"
                                ColumnDefinitions="auto,*"
                                HorizontalOptions="FillAndExpand"
                                RowDefinitions="auto,*"
                                VerticalOptions="FillAndExpand">

                                <control:CustomImg
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    Aspect="AspectFill"
                                    Src="{Binding CurrentSongThumbnail}"
                                    Style="{StaticResource CachedImgStyle}"
                                    VerticalOptions="FillAndExpand"
                                    WidthRequest="{StaticResource PlayerHeight}" />

                                <ProgressBar
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    HeightRequest="3"
                                    HorizontalOptions="FillAndExpand"
                                    Progress="{Binding Progress, Converter={StaticResource ValueProgressBarConverter}}"
                                    ProgressColor="{StaticResource DimOrange}"
                                    VerticalOptions="End" />

                                <Grid
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    ColumnDefinitions="*,auto">

                                    <StackLayout
                                        Margin="0,0,0,0"
                                        HorizontalOptions="FillAndExpand"
                                        Orientation="Vertical"
                                        Spacing="3"
                                        VerticalOptions="Center">
                                        <Label
                                            FontFamily="LightFont"
                                            FontSize="15"
                                            HorizontalOptions="FillAndExpand"
                                            HorizontalTextAlignment="Start"
                                            MaxLines="2"
                                            Text="{Binding CurrentSongName}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Start" />
                                        <Label
                                            FontFamily="BoldFont"
                                            FontSize="14"
                                            HorizontalOptions="FillAndExpand"
                                            HorizontalTextAlignment="Start"
                                            Text="{Binding CurrentAuthorName}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Start" />
                                    </StackLayout>

                                    <pv:PancakeView
                                        Grid.Column="1"
                                        Margin="0,0,10,0"
                                        CornerRadius="20"
                                        HeightRequest="40"
                                        Shadow="{Binding BtnShadow}"
                                        VerticalOptions="Center"
                                        WidthRequest="40">
                                        <pv:PancakeView.BackgroundGradientStops>
                                            <pv:GradientStopCollection>
                                                <pv:GradientStop Offset="0" Color="#D4420C" />
                                                <pv:GradientStop Offset="1" Color="#F3A283" />
                                            </pv:GradientStopCollection>
                                        </pv:PancakeView.BackgroundGradientStops>
                                        <pv:PancakeView.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PlayToggleCommand}" />
                                        </pv:PancakeView.GestureRecognizers>
                                        <Label
                                            FontSize="20"
                                            HorizontalOptions="FillAndExpand"
                                            Style="{StaticResource MaterialIcons}"
                                            Text="{Binding IsPlaying, Converter={StaticResource MediaStateConverter}}"
                                            TextColor="White"
                                            VerticalOptions="FillAndExpand" />
                                    </pv:PancakeView>
                                </Grid>
                            </Grid>
                        </pv:PancakeView>
                    </Grid>
                </Grid>
                <!--  download  -->
                <Grid
                    Grid.RowSpan="2"
                    HeightRequest="{StaticResource PlayerHeight}"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding IsDownloading}"
                    VerticalOptions="End">
                    <pv:PancakeView
                        HorizontalOptions="FillAndExpand"
                        Shadow="{Binding BtnShadow}"
                        VerticalOptions="FillAndExpand">
                        <pv:PancakeView.BackgroundGradientStops>
                            <pv:GradientStopCollection>
                                <pv:GradientStop Offset="0" Color="#E3E7EE" />
                                <pv:GradientStop Offset="1" Color="#FBFBFB" />
                            </pv:GradientStopCollection>
                        </pv:PancakeView.BackgroundGradientStops>
                        <Grid
                            Margin="0"
                            Padding="0"
                            HorizontalOptions="FillAndExpand"
                            RowDefinitions="*,*"
                            VerticalOptions="FillAndExpand">
                            <Grid VerticalOptions="FillAndExpand">
                                <ProgressBar
                                    Margin="10,0"
                                    HorizontalOptions="FillAndExpand"
                                    Progress="{Binding ProgressValue, Converter={StaticResource ValueProgressBarConverter}}"
                                    VerticalOptions="End" />
                            </Grid>
                            <Label
                                Grid.Row="1"
                                HorizontalOptions="FillAndExpand"
                                HorizontalTextAlignment="Center"
                                Text="{Binding DownloadingSongName}"
                                TextColor="Black"
                                VerticalOptions="FillAndExpand"
                                VerticalTextAlignment="Start" />
                        </Grid>

                    </pv:PancakeView>

                </Grid>
            </Grid>
        </pv:PancakeView>

    </ContentPage.Content>
</ContentPage>